<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../public/assets/css/MeP.css">
    <script src="../public/assets/js/scriptNav.js"></script>
    <title>Blog</title>
</head>
<body>
<!-- Header -->
{% include 'Header.html.twig' %}
<div class="wrap">
    <h3>Les Recettes du Blog Culinaire propos√©es par votre chef Louis Lamotte</h3>
    <div class="articles">
        {% for a in articles %}
        <article>
            <h2>{{ a.Name }}</h2>
            <p>Mise en ligne le {{ a.Date|date('d/m/y') }}</p>
            <img src={{ asset('../public/assets/img/recette2.jpg') }} alt="">
            <p class="description">{{ a.Description }}</p>
            <button><a href={{ path("updateArticle",{'id':a.id}) }}>Modifier la recette</a></button>
            <button><a href={{ path("deleteArticle",{'id':a.id}) }}>Supprimer la recette</a></button>
        </article>
        <div class="clear"></div>
        {% endfor %}

        <button><a href={{ path('newArticle') }}>Nouvelle recette</a></button>
    </div>
</div>
<!-- Footer -->
{% include 'Footer.html.twig' %}
</body>
</html>